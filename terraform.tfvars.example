# Copy this file to terraform.tfvars and update values

# Basic Configuration
location = "Central India"
resource_group_name = "rg-blitzy-prod"
prefix = "blitzy"

# Network Configuration
vnet_cidr = "10.0.0.0/16"
k8s_subnet_cidr = "10.0.1.0/24"
db_subnet_cidr = "10.0.2.0/24"
redis_subnet_cidr = "10.0.3.0/24"
shared_subnet_cidr = "10.0.4.0/24"

# AKS Configuration
kubernetes_version = "1.28.3"
aks_node_count = 3
aks_min_count = 2
aks_max_count = 10
aks_vm_size = "Standard_D4s_v3"
aks_service_cidr = "10.1.0.0/16"
aks_dns_service_ip = "10.1.0.10"

# ACR Configuration
acr_sku = "Premium"

# PostgreSQL Configuration
postgres_version = "13"
postgres_admin_username = "pgadmin"
postgres_admin_password = "YourSecurePassword123!"
postgres_storage_mb = 65536
postgres_sku_name = "GP_Standard_D2s_v3"

# Redis Configuration
redis_capacity = 2
redis_family = "P"
redis_sku_name = "Premium"
redis_private_ip = "10.0.3.10"

# Tags
tags = {
  Owner = "blitzy-team"
  Env   = "production"
  Project = "blitzy-app"
}